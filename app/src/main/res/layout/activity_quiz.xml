<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".quiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btnSurah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#a8dfa8"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:text="Surah Pendek" />
        <Button
            android:id="@+id/btnDoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="Do'a Harian" />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:gravity="center"
            android:id="@+id/score"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:id="@+id/question"
            android:layout_above="@+id/answer1"
            android:layout_below="@+id/score"
            tools:ignore="UnknownId"
            android:gravity="center"
            android:textSize="20dp"
            android:text="TextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer4"
            android:background="@drawable/background_dialog"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Button"
            android:textColor="#0b9b14"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog"
            android:id="@+id/answer3"
            android:layout_above="@+id/answer4"
            android:layout_centerHorizontal="true"
            android:textColor="#0b9b14"
            android:text="Button"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog"
            android:text="Button"
            android:layout_above="@+id/answer3"
            android:id="@+id/answer2"
            android:layout_centerHorizontal="true"
            android:textColor="#0b9b14"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog"
            android:id="@+id/answer1"
            android:layout_above="@+id/answer2"
            android:textColor="#0b9b14"
            android:text="Button"
            />
    </LinearLayout>



</LinearLayout>