<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="2dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/circleView"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="5dp"
            android:src="@drawable/alquran" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circleView"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@+id/circleView"
            android:layout_toRightOf="@+id/circleView"
            android:text="Surah Al-Fatihah"
            android:textColor="#067b08"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/person_ayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="٧-١"
            android:textColor="#067b08"
            android:textSize="16sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnklik"
            android:background="@android:color/transparent"/>


    </android.support.v7.widget.CardView>

</RelativeLayout>